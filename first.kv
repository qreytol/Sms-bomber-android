<MainTest>:
    MDScreen:
        MDFloatLayout:
            MDLabel:
                id: start_spam_info
                text:''
                halign: 'center'
                pos_hint: {'center_y':.6}
            
            MDCard:
                size_hint: None, None
                pos_hint: {'center_x':.5,'center_y':.75}
                md_bg_color: 0,0,0,0

                FitImage:
                    source: 'logo.png'

            MDTextField:
                id: enter_phone
                hint_text: 'Введіть номер'
                size_hint: .38,None
                helper_text: 'Приклад: 380000000000'
                helper_text_mode: 'on_focus'
                mode: 'rectangle'
                pos_hint: {'center_x':.3, 'center_y':.52}

            MDTextField:
                id: minutes
                hint_text: 'Хвилин'
                pos_hint: {'center_x':.67, 'center_y':.52}
                mode: 'rectangle'
                helper_text: 'Вводи НЕ більше 10'
                helper_text_mode: 'on_focus'
                size_hint: .24,None

            MDRaisedButton:
                text:'Запустити спам'
                pos_hint: {'center_x':.5, 'center_y':.41}
                size_hint: None,.084
                on_press: root.start_spam()

            MDLabel:
                id: operator
                text: ''
                halign: 'center'
                pos_hint: {'center_y':0.33}

            MDLabel:
                id: country
                text:''
                halign: 'center'
                pos_hint: {'center_y':0.26}

            MDLabel:
                id: geo
                text:''
                halign:'center'
                pos_hint: {'center_y':0.19}



